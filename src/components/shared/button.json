{
  "collectionName": "components_shared_buttons",
  "info": {
    "displayName": "Button"
  },
  "options": {},
  "attributes": {
    "label": {
      "type": "string"
    },
    "variant": {
      "type": "enumeration",
      "enum": [
        "primary",
        "secondary",
        "light",
        "dark",
        "danger",
        "sea"
      ],
      "default": "primary"
    },
    "href": {
      "type": "string",
      "required": true
    },
    "target": {
      "type": "enumeration",
      "enum": [
        "_blank",
        "_self"
      ],
      "default": "_self"
    },
    "isExternal": {
      "type": "boolean",
      "default": false
    },
    "size": {
      "type": "enumeration",
      "enum": [
        "small",
        "medium",
        "large"
      ],
      "default": "medium"
    }
  }
}
